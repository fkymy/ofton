<h2>新規ヒアリング</h2>
<% if notice %><div class=""><p class=""><%= notice %></p></div><% end %>
<% if alert %><div class=""><p class=""><%= alert %></p></div><% end %>
<div class="col-sm-offset-4 col-sm-4 col-xs-12">
  <%= form_for(@bulletin, url: admin_bulletins_path(@bulletin), html: {class: "form"}) do |f| %>
    <div class="form-group">
      <%= f.label :user_id %><br />
      <%= f.number_field :user_id, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :body %><br />
      <%= f.text_area :body, autocomplete: "off", class: "form-control" %>
    </div>

    <%= f.submit "送信", class: "btn btn-primary btn-lg" %>
  <% end %>

</div>
