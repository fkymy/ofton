<h2>ヒアリング管理 <span> <%= link_to "新規作成", new_admin_bulletin_path %> </span> </h2>
<div class="table-responsive">
  <table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th>ID</th>
        <th>内容</th>
      </tr>
    </thead>
    <tbody>
      <% @bulletins.each do |bulletin| %>
        <tr>
          <td><%= link_to bulletin.id, bulletin_path(bulletin) %></td>
          <td><%= bulletin.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
