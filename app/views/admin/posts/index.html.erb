<h2>投稿管理</h2>
<div class="table-responsive">
  <table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th>ID</th>
        <th>投稿者</th>
        <th>内容</th>
        <th>コメント数</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.id, admin_post_path(post) %></td>
          <td><%= post.author %></td>
          <td><%= post.body %></td>
          <td><%= post.comments.size %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
