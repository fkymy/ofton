// Append new data
$("<%=j render(:partial => 'posts', :object => @posts) %>")
  .appendTo($(".postList"));

// Update pagination link
<% if @posts.last_page? %>
  $('.i-pagination').html("終わり。");
<% else %>
  $('.i-pagination')
    .html("<%=j link_to_next_page(@posts, 'もっと見る', :remote => true) %>");
<% end %>
