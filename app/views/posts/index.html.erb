<div id="floating-container">
  <%= link_to new_post_path, class: "floating-action__item" do %>
    <%= image_tag "talk-logo.png" %>
  <% end %>
</div>

<div class="module">
  <div class="module__body">
    <div class="about">
      <div class="about__lede">
        <p class="about__lede-text">寂しい、辛い、誰かと<br>話したい時のコミュニティ。</p>
      </div>
      <div class="about__action">
        <a href="<%= about_path %>" class="btn btn--secondary">初めての方はこちらへ</a>
      </div>
    </div>
    <div class="entries">
      <ul class="entries__list">
        <% @posts.each do |post| %>
          <li class="entries__item">
            <div class="media">
              <div class="media__img">
                <%= image_tag(post.decorate.avatar, :alt => "user icon") %>
              </div>
              <div class="media__bd">
                <%= link_to post_path(post), class: "post-content" do %>
                  <div>
                    <div class="post-content__meta">
                      <span class="post-content__author"><%= post.decorate.author %></span>
                      <span class="post-content__datetime"><%= post.decorate.datetime %></span>
                    </div>
                    <div class="post-content__body">
                      <%= simple_format(hbr(post.body)) %>
                    </div>
                    <div class="post-content__comments-count">
                      <span>コメント <%= post.comments_count %></span>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
      <div class="entries__pagination">
        <%= paginate @posts %>
      </div>
    </div>
  </div>
</div>
